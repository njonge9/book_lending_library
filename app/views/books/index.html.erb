<h1>Available Books</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= book.available? ? "Available" : "Borrowed" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
