<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>ISBN:</strong> <%= @book.isbn %></p>
<% if @book.available? %>
  <%= button_to "Borrow", borrowings_path(book_id: @book.id), method: :post, class: "btn btn-primary" %>
<% else %>
  <p class="text-danger">This book is currently borrowed.</p>
<% end %>
